<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_GroupItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:layout_marginVertical="1dp"
    android:background="@color/primary_background"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_GroupAvatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cute1"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/textView_GroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Genaral"
            android:fontFamily="@font/public_sans_semi_bold"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_GroupStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_text"
        android:textAlignment="center"
        android:paddingVertical="2dp"
        android:paddingHorizontal="6dp"
        android:textSize="11sp"
        android:background="@drawable/chat_nummess_border_red"
        android:text="new" />
</LinearLayout>
