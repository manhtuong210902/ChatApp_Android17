<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_G"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    android:layout_marginVertical="1dp"
    android:background="@color/primary_background"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civSearchAvt"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/cute1"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tvSearchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Genaral"
                    android:fontFamily="@font/public_sans_semi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    />

                <TextView
                    android:id="@+id/tvSearchMess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hello"
                    android:fontFamily="@font/public_sans_regular"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:gravity="center"
                    />
        </LinearLayout>

</LinearLayout>