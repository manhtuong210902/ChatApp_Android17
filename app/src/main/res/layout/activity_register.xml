<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/primary_background"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chatvia17"
            android:fontFamily="@font/public_sans_semi_bold"
            android:textSize="25sp"
            android:textColor="@color/primary_text"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/public_sans_semi_bold"
        android:text="Sign up"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/public_sans_regular"
        android:text="Get your Chatvia account now"
        android:textSize="15sp"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="24dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_marginBottom="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:fontFamily="@font/public_sans_medium"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText_emailRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:fontFamily="@font/public_sans_regular"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_mail_line"
            android:drawablePadding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Username"
            android:fontFamily="@font/public_sans_medium"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText_userNameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:fontFamily="@font/public_sans_regular"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_user_2_line"
            android:drawablePadding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password"
            android:fontFamily="@font/public_sans_medium"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editText_passwordRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:textSize="15sp"
            android:fontFamily="@font/public_sans_regular"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"
            android:drawableLeft="@drawable/ic_lock_2_line"
            android:drawablePadding="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:id="@+id/btn_signup"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/public_sans_medium"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="#fff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ? "
            android:textSize="15sp"
            android:fontFamily="@font/public_sans_regular"
            android:textColor="@color/primary_text"/>
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:fontFamily="@font/public_sans_regular"
            android:text=" Signin"
            android:textColor="@color/primary_color"/>
    </LinearLayout>
</LinearLayout>