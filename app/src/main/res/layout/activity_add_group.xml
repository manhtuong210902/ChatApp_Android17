<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupActivity"
    android:padding="24dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new group"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_background"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/editText_groupName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter group name"
        android:background="@drawable/input_boder"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        android:theme="@style/AppSearchView"
        app:searchIcon="@drawable/ic_search_line"
        android:background="@drawable/chat_bg_border_radius_8dp"
        app:submitBackground="@android:color/transparent"
        app:queryBackground="@android:color/transparent"
        android:id="@+id/searchView_SearchGroupMember"
        app:queryHint="Search name or phone..."
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Group members"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_listFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>