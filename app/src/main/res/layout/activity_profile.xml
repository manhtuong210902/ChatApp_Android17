<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/primary_background"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/c_tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/primary_text"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:id="@+id/layout_Avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Deprecated">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cute1"/>
        <RelativeLayout
            android:id="@+id/rlParent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civPen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pen"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />
        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patricia_mercssee"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textFontWeight="12"
        />
    <!--
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:id="@+id/c_tilFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <AutoCompleteTextView
            android:id="@+id/avtv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Available"
            android:inputType="none"
            android:textAlignment="center"
            />

    </com.google.android.material.textfield.TextInputLayout>

    -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:gravity="center"
        >

        <Spinner android:id="@+id/spn_prf_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:spinnerMode="dropdown"
            />

    </LinearLayout>



    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />

</LinearLayout>