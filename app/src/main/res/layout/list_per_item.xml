<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="?android:attr/expandableListPreferredChildPaddingLeft"
    android:paddingVertical="8dp">
    <TextView
        android:id="@+id/expandedListItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:fontFamily="@font/public_sans_regular"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="4dp"
        />
    <TextView
        android:id="@+id/expandedListItemContent"
        android:layout_width="wrap_content"
        android:text="Mạnh Tường"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/public_sans_semi_bold"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="8dp"
       />
</LinearLayout>